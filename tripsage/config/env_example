# TripSage MCP Configuration Example
# Copy this file to .env and modify as needed

# General settings
APP_NAME=TripSage
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO

# OpenAI settings
OPENAI_API_KEY=your_openai_api_key_here

# Playwright MCP settings
TRIPSAGE_MCP_PLAYWRIGHT_ENABLED=true
TRIPSAGE_MCP_PLAYWRIGHT_URL=http://localhost:3000
TRIPSAGE_MCP_PLAYWRIGHT_API_KEY=your_playwright_api_key_here
TRIPSAGE_MCP_PLAYWRIGHT_TIMEOUT=60
TRIPSAGE_MCP_PLAYWRIGHT_HEADLESS=true
TRIPSAGE_MCP_PLAYWRIGHT_BROWSER_TYPE=chromium
TRIPSAGE_MCP_PLAYWRIGHT_TIMEOUT_PAGE=60
TRIPSAGE_MCP_PLAYWRIGHT_TIMEOUT_NAVIGATION=30
TRIPSAGE_MCP_PLAYWRIGHT_SESSION_PERSISTENCE=true

# Google Maps MCP settings
TRIPSAGE_MCP_GOOGLEMAPS_ENABLED=true
TRIPSAGE_MCP_GOOGLEMAPS_URL=http://localhost:3001
TRIPSAGE_MCP_GOOGLEMAPS_API_KEY=your_googlemaps_api_key_here
TRIPSAGE_MCP_GOOGLEMAPS_MAP_TYPE=roadmap
TRIPSAGE_MCP_GOOGLEMAPS_LANGUAGE=en
TRIPSAGE_MCP_GOOGLEMAPS_REGION=US

# Weather MCP settings
TRIPSAGE_MCP_WEATHER_ENABLED=true
TRIPSAGE_MCP_WEATHER_URL=http://localhost:3002
TRIPSAGE_MCP_WEATHER_API_KEY=your_weather_api_key_here
TRIPSAGE_MCP_WEATHER_TEMPERATURE_UNIT=celsius
TRIPSAGE_MCP_WEATHER_FORECAST_DAYS=7

# Time MCP settings
TRIPSAGE_MCP_TIME_ENABLED=true
TRIPSAGE_MCP_TIME_URL=http://localhost:3003
TRIPSAGE_MCP_TIME_DEFAULT_TIMEZONE=UTC

# Redis MCP settings
TRIPSAGE_MCP_REDIS_ENABLED=true
TRIPSAGE_MCP_REDIS_HOST=localhost
TRIPSAGE_MCP_REDIS_PORT=6379
TRIPSAGE_MCP_REDIS_DB_INDEX=0
TRIPSAGE_MCP_REDIS_DEFAULT_TTL=3600
TRIPSAGE_MCP_REDIS_NAMESPACE=tripsage

# Crawl4AI MCP settings
TRIPSAGE_MCP_CRAWL4AI_ENABLED=true
TRIPSAGE_MCP_CRAWL4AI_URL=http://localhost:3004
TRIPSAGE_MCP_CRAWL4AI_API_KEY=your_crawl4ai_api_key_here
TRIPSAGE_MCP_CRAWL4AI_RAG_ENABLED=true
TRIPSAGE_MCP_CRAWL4AI_MAX_PAGES=10
TRIPSAGE_MCP_CRAWL4AI_EXTRACT_IMAGES=false
TRIPSAGE_MCP_CRAWL4AI_CACHE_TTL=3600
TRIPSAGE_MCP_CRAWL4AI_USER_AGENT=TripSage/1.0
# Example of setting allowed domains
TRIPSAGE_MCP_CRAWL4AI_ALLOWED_DOMAINS__0=tripadvisor.com
TRIPSAGE_MCP_CRAWL4AI_ALLOWED_DOMAINS__1=wikitravel.org
TRIPSAGE_MCP_CRAWL4AI_ALLOWED_DOMAINS__2=lonelyplanet.com
# Example of setting blocked domains
TRIPSAGE_MCP_CRAWL4AI_BLOCKED_DOMAINS__0=pinterest.com
TRIPSAGE_MCP_CRAWL4AI_BLOCKED_DOMAINS__1=quora.com

# Firecrawl MCP settings
TRIPSAGE_MCP_FIRECRAWL_ENABLED=true
TRIPSAGE_MCP_FIRECRAWL_URL=http://localhost:3005
TRIPSAGE_MCP_FIRECRAWL_API_KEY=your_firecrawl_api_key_here
TRIPSAGE_MCP_FIRECRAWL_JS_RENDERING=true
TRIPSAGE_MCP_FIRECRAWL_EXTRACT_STRUCTURED_DATA=true
TRIPSAGE_MCP_FIRECRAWL_CACHE_TTL=3600
TRIPSAGE_MCP_FIRECRAWL_USER_AGENT=TripSage/1.0
# Example of setting allowed domains
TRIPSAGE_MCP_FIRECRAWL_ALLOWED_DOMAINS__0=airbnb.com
TRIPSAGE_MCP_FIRECRAWL_ALLOWED_DOMAINS__1=booking.com
TRIPSAGE_MCP_FIRECRAWL_ALLOWED_DOMAINS__2=expedia.com
# Example of setting wait for selectors
TRIPSAGE_MCP_FIRECRAWL_WAIT_FOR_SELECTORS__0=.search-results
TRIPSAGE_MCP_FIRECRAWL_WAIT_FOR_SELECTORS__1=.property-card

# Supabase MCP settings
TRIPSAGE_MCP_SUPABASE_ENABLED=true
TRIPSAGE_MCP_SUPABASE_HOST=db.project.supabase.co
TRIPSAGE_MCP_SUPABASE_PORT=5432
TRIPSAGE_MCP_SUPABASE_USERNAME=postgres
TRIPSAGE_MCP_SUPABASE_PASSWORD=your_supabase_db_password_here
TRIPSAGE_MCP_SUPABASE_DATABASE=postgres
TRIPSAGE_MCP_SUPABASE_PROJECT_REF=your_project_ref_here
TRIPSAGE_MCP_SUPABASE_ANON_KEY=your_supabase_anon_key_here
TRIPSAGE_MCP_SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Neo4j Memory MCP settings
TRIPSAGE_MCP_NEO4J_MEMORY_ENABLED=true
TRIPSAGE_MCP_NEO4J_MEMORY_HOST=localhost
TRIPSAGE_MCP_NEO4J_MEMORY_PORT=7687
TRIPSAGE_MCP_NEO4J_MEMORY_USERNAME=neo4j
TRIPSAGE_MCP_NEO4J_MEMORY_PASSWORD=your_neo4j_password_here
TRIPSAGE_MCP_NEO4J_MEMORY_DATABASE=neo4j
TRIPSAGE_MCP_NEO4J_MEMORY_SCHEME=neo4j
TRIPSAGE_MCP_NEO4J_MEMORY_GRAPH_NAME=knowledge

# Duffel Flights MCP settings
TRIPSAGE_MCP_DUFFEL_FLIGHTS_ENABLED=true
TRIPSAGE_MCP_DUFFEL_FLIGHTS_URL=http://localhost:3006
TRIPSAGE_MCP_DUFFEL_FLIGHTS_API_KEY=your_duffel_api_key_here
TRIPSAGE_MCP_DUFFEL_FLIGHTS_DEFAULT_CURRENCY=USD
TRIPSAGE_MCP_DUFFEL_FLIGHTS_DEFAULT_MARKET=US
TRIPSAGE_MCP_DUFFEL_FLIGHTS_DEFAULT_LOCALE=en-US

# Airbnb MCP settings
TRIPSAGE_MCP_AIRBNB_ENABLED=true
TRIPSAGE_MCP_AIRBNB_URL=http://localhost:3007
TRIPSAGE_MCP_AIRBNB_API_KEY=your_airbnb_api_key_here
TRIPSAGE_MCP_AIRBNB_DEFAULT_CURRENCY=USD
TRIPSAGE_MCP_AIRBNB_DEFAULT_LOCALE=en-US

# Google Calendar MCP settings
TRIPSAGE_MCP_GOOGLECALENDAR_ENABLED=true
TRIPSAGE_MCP_GOOGLECALENDAR_URL=http://localhost:3008
TRIPSAGE_MCP_GOOGLECALENDAR_API_KEY=your_google_calendar_api_key_here
TRIPSAGE_MCP_GOOGLECALENDAR_AUTH_MODE=oauth
TRIPSAGE_MCP_GOOGLECALENDAR_CREDENTIALS_PATH=/path/to/credentials.json
# Example of setting scopes
TRIPSAGE_MCP_GOOGLECALENDAR_SCOPES__0=https://www.googleapis.com/auth/calendar
TRIPSAGE_MCP_GOOGLECALENDAR_SCOPES__1=https://www.googleapis.com/auth/calendar.events
