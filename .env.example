# TripSage Environment Configuration
# Copy this file to .env and update with your actual values

# OpenAI API (Required for agent functionality)
OPENAI_API_KEY=your-openai-api-key

# Database Provider Configuration
# Select which database provider to use: "supabase" or "neon"
DB_PROVIDER=supabase

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_TIMEOUT=60.0
SUPABASE_AUTO_REFRESH_TOKEN=true
SUPABASE_PERSIST_SESSION=true

# Neon Configuration (for development environment)
NEON_CONNECTION_STRING=postgresql://username:password@endpoint-name.region.aws.neon.tech/database
NEON_MIN_POOL_SIZE=1
NEON_MAX_POOL_SIZE=10
NEON_MAX_INACTIVE_CONNECTION_LIFETIME=300.0

# App configuration
NODE_ENV=development
PORT=8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Legacy Database configuration (deprecated)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tripsage

# Google Maps MCP Server
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MCP_GOOGLEMAPS_ENDPOINT=http://localhost:3101

# Airbnb MCP Server
AIRBNB_API_KEY=your-airbnb-api-key
MCP_AIRBNB_ENDPOINT=http://localhost:3100
AIRBNB_IGNORE_ROBOTS_TXT=false

# Flights MCP Server
DUFFEL_API_KEY=your-duffel-api-key
MCP_FLIGHTS_ENDPOINT=http://localhost:3103

# Weather MCP Server
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key
VISUAL_CROSSING_API_KEY=your-visual-crossing-api-key
MCP_WEATHER_ENDPOINT=http://localhost:3102

# Web Crawling MCP Server
MCP_WEBCRAWL_ENDPOINT=http://localhost:3106

# Calendar MCP Server
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-client-secret
MCP_CALENDAR_ENDPOINT=http://localhost:3104

# Memory MCP Server (Knowledge Graph)
NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password
MCP_MEMORY_ENDPOINT=http://localhost:3105

# Browser Automation MCP Server
MCP_BROWSER_ENDPOINT=http://localhost:3107

# Time MCP Server
MCP_TIME_ENDPOINT=http://localhost:3108

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_TLS=false
REDIS_TTL_SHORT=300
REDIS_TTL_MEDIUM=3600
REDIS_TTL_LONG=86400

# OpenAI Agents SDK Configuration
OPENAI_AGENTS_SDK_TRACE_ENABLED=true
OPENAI_AGENTS_SDK_TRACE_CONSOLE=true
