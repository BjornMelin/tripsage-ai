# API Keys
CRAWL4AI_API_KEY=your_crawl4ai_api_key_here
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Crawl4AI Configuration
CRAWL4AI_API_URL=http://localhost:11235
CRAWL4AI_RETRY_MAX_ATTEMPTS=3
CRAWL4AI_RETRY_INITIAL_DELAY=1000
CRAWL4AI_RETRY_MAX_DELAY=10000
CRAWL4AI_RETRY_BACKOFF_FACTOR=2

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=86400  # 24 hours in seconds
REDIS_CACHE_TTL_DYNAMIC=3600  # 1 hour in seconds for frequently updated sites

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/webcrawl-mcp.log