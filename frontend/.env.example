# =============================================================================
# TripSage Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values.
# This file contains all environment variables used by both frontend and backend.

# =============================================================================
# BASE CONFIGURATION
# =============================================================================
# Node.js environment (development, production, test)
NODE_ENV=development

# Server hostname (optional)
HOSTNAME=localhost

# Server port (default: 3000 for frontend, 8000 for backend)
PORT=3000

# =============================================================================
# FRONTEND (Next.js) - Public Variables (NEXT_PUBLIC_*)
# =============================================================================
# Public API URL for frontend to call backend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Application name (default: TripSage)
NEXT_PUBLIC_APP_NAME=TripSage

# Base path for Next.js app (optional, for subdirectory deployments)
NEXT_PUBLIC_BASE_PATH=

# Site URL for canonical links and OAuth callbacks
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Google Maps Browser API Key (for client-side Maps JS)
# Must be referrer-restricted in production
NEXT_PUBLIC_GOOGLE_MAPS_BROWSER_API_KEY=

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Supabase project URL (required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous/public key (required)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (server-only, for admin operations)
SUPABASE_SERVICE_ROLE_KEY=

# Supabase JWT secret (for token validation, required in production)
SUPABASE_JWT_SECRET=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Supabase database URL (optional, defaults to NEXT_PUBLIC_SUPABASE_URL)
DATABASE_URL=

# PostgreSQL connection URL (optional, for direct PostgreSQL access)
POSTGRES_URL=

# =============================================================================
# CACHE & RATE LIMITING (Upstash Redis)
# =============================================================================
# Upstash Redis REST API URL
UPSTASH_REDIS_REST_URL=

# Upstash Redis REST API token
UPSTASH_REDIS_REST_TOKEN=

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI API key (for fallback/default provider)
OPENAI_API_KEY=

# Anthropic API key (optional, for Claude models)
ANTHROPIC_API_KEY=

# Vercel AI Gateway API key (optional, for multi-provider routing)
AI_GATEWAY_API_KEY=

# Vercel AI Gateway URL (default: https://ai-gateway.vercel.sh/v1)
AI_GATEWAY_URL=https://ai-gateway.vercel.sh/v1

# OpenRouter attribution (optional, for OpenRouter provider)
OPENROUTER_REFERER=
OPENROUTER_TITLE=TripSage

# =============================================================================
# WEB CRAWLING & SEARCH
# =============================================================================
# Firecrawl API key (for web crawling and search)
FIRECRAWL_API_KEY=

# Firecrawl base URL (default: https://api.firecrawl.dev/v2)
FIRECRAWL_BASE_URL=https://api.firecrawl.dev/v2

# =============================================================================
# TRAVEL APIS
# =============================================================================
# Duffel API key (for flight search)
DUFFEL_ACCESS_TOKEN=
DUFFEL_API_KEY=

# OpenWeatherMap API key (for weather data)
OPENWEATHERMAP_API_KEY=

# Google Maps Server API Key (for server-side Geocoding/Places/Routes)
# Must be IP+API restricted in production
GOOGLE_MAPS_SERVER_API_KEY=

# Accommodations Search API
ACCOM_SEARCH_URL=
ACCOM_SEARCH_TOKEN=

# Airbnb MCP (Model Context Protocol) endpoint
AIRBNB_MCP_URL=
AIRBNB_MCP_API_KEY=

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
# Backend API URL (for frontend to call Python backend)
BACKEND_API_URL=http://localhost:8001

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Google Analytics ID
GOOGLE_ANALYTICS_ID=

# Mixpanel token
MIXPANEL_TOKEN=

# PostHog configuration
POSTHOG_HOST=
POSTHOG_KEY=

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable bundle analysis (default: false)
ANALYZE=false

# Enable debug mode (default: false)
DEBUG=false
