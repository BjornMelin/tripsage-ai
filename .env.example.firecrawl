# Firecrawl MCP Configuration Example
# Add these to your .env file to configure the Firecrawl MCP integration

# Firecrawl API Configuration
TRIPSAGE_MCP_FIRECRAWL_URL=https://api.firecrawl.dev
TRIPSAGE_MCP_FIRECRAWL_API_KEY=fc-YOUR_FIRECRAWL_API_KEY_HERE

# Firecrawl MCP Server URL (default: http://localhost:4000)
# This is the URL of the MCP server that wraps the Firecrawl API
TRIPSAGE_MCP_FIRECRAWL_MCP_SERVER_URL=http://localhost:4000

# Optional settings
TRIPSAGE_MCP_FIRECRAWL_ENABLED=true
TRIPSAGE_MCP_FIRECRAWL_TIMEOUT=60
TRIPSAGE_MCP_FIRECRAWL_RETRY_ATTEMPTS=3
TRIPSAGE_MCP_FIRECRAWL_JS_RENDERING=true
TRIPSAGE_MCP_FIRECRAWL_EXTRACT_STRUCTURED_DATA=true

# Caching settings
TRIPSAGE_MCP_FIRECRAWL_CACHE_TTL=3600  # Cache for 1 hour

# Domain restrictions for web crawling
# Comma-separated list of allowed domains
TRIPSAGE_MCP_FIRECRAWL_ALLOWED_DOMAINS=airbnb.com,booking.com,hotels.com,tripadvisor.com

# Comma-separated list of blocked domains
TRIPSAGE_MCP_FIRECRAWL_BLOCKED_DOMAINS=google.com,facebook.com,twitter.com

# User agent
TRIPSAGE_MCP_FIRECRAWL_USER_AGENT=TripSage/1.0